---
import { experiences } from "@/config/portfolio";
import { Icon } from "astro-icon/components";
import HeaderSection from "./header-section.astro";
---

<section id="experience" class="py-16 sm:py-20 bg-muted/30">
  <div class="container max-w-5xl">
    <HeaderSection
      label="Career"
      title="Professional Experience"
      subtitle="My journey in software development and leadership"
    />
    
    <div class="mt-12 space-y-8">
      {experiences.map((exp, index) => (
        <div class="relative pl-8 before:absolute before:left-0 before:top-0 before:h-full before:w-px before:bg-border">
          <div class="absolute -left-2 top-0 size-4 rounded-full border-2 border-primary bg-background"></div>
          <div class="space-y-3">
            <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-2">
              <div>
                <h3 class="font-heading text-xl font-semibold">
                  {exp.position}
                </h3>
                <p class="text-muted-foreground">
                  {exp.company}
                </p>
              </div>
              <span class="text-sm text-muted-foreground">
                {exp.duration}
              </span>
            </div>
            <p class="text-muted-foreground">
              {exp.description}
            </p>
            <ul class="space-y-2">
              {exp.achievements.map((achievement) => (
                <li class="flex items-start gap-2 text-sm text-muted-foreground">
                  <Icon name="lucide:check" class="size-4 text-primary mt-0.5 flex-shrink-0" />
                  <span>{achievement}</span>
                </li>
              ))}
            </ul>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>