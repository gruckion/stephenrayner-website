---
import { cn } from "@/lib/utils";
import { buttonVariants } from "@/components/ui/button";
import { Icon } from "astro-icon/components";
import { siteConfig } from "@/config/site";
---

<section class="space-y-6 py-12 sm:py-20 lg:py-24">
  <div class="container flex max-w-5xl flex-col items-center gap-5 text-center">
    <h1
      class="text-balance font-heading text-4xl sm:text-5xl md:text-6xl lg:text-[66px]"
    >
      Hi, I'm{" "}
      <span class="bg-gradient-to-r from-blue-600 to-purple-600 bg-clip-text text-transparent font-extrabold">
        Stephen Rayner
      </span>
    </h1>

    <p
      class="max-w-2xl text-balance text-xl leading-normal text-muted-foreground sm:text-2xl sm:leading-8"
    >
      Full-Stack Developer & Technical Leader
    </p>
    
    <p
      class="max-w-2xl text-balance leading-normal text-muted-foreground sm:text-lg"
    >
      Passionate about building scalable applications, leading engineering teams, and sharing knowledge through writing and mentorship.
    </p>

    <div class="flex flex-col sm:flex-row justify-center gap-4 pt-4">
      <a
        href="#projects"
        class={cn(buttonVariants({ size: "lg", rounded: "full" }), "gap-2")}
      >
        <Icon name="lucide:folder" class="size-4" />
        <span>View Projects</span>
      </a>
      <a
        href="#contact"
        class={cn(
          buttonVariants({
            variant: "outline",
            size: "lg",
            rounded: "full",
          }),
          "gap-2"
        )}
      >
        <Icon name="lucide:mail" class="size-4" />
        <span>Get in Touch</span>
      </a>
    </div>

    <div class="flex justify-center items-center gap-4 pt-4">
      <a
        href={siteConfig.links.github}
        target="_blank"
        rel="noreferrer"
        class="text-muted-foreground hover:text-foreground transition-colors"
        aria-label="GitHub"
      >
        <Icon name="github" class="size-6" />
      </a>
      <a
        href={siteConfig.links.linkedin}
        target="_blank"
        rel="noreferrer"
        class="text-muted-foreground hover:text-foreground transition-colors"
        aria-label="LinkedIn"
      >
        <Icon name="lucide:linkedin" class="size-6" />
      </a>
      <a
        href={siteConfig.links.twitter}
        target="_blank"
        rel="noreferrer"
        class="text-muted-foreground hover:text-foreground transition-colors"
        aria-label="Twitter"
      >
        <Icon name="lucide:twitter" class="size-6" />
      </a>
    </div>
  </div>
</section>
